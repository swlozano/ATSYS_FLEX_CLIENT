            private function validateForm(event:Event):void{
             
               focussedFormControl = event.target as DisplayObject;
               formIsValid = true;
               validate(nameValidator);
               validate(apeValidator);
               validate(cedValidator);
               validate(emailValidator);
              // validate(telValidator);
               validate(domiValidator);
               //validate(celValidator);
               validate(fechaNacValidator);
               validate(rutValidator);
               validate(comboContExpValidator);
               validate(comboPaisExpValidator);
               validate(comboCityExpValidator);
               validate(comboContNatValidator);
               validate(comboPaisNatValidator);
               validate(comboNatValidator);
               
               permitirGuardar();
               
            }
            
            private function validateFormAfiliaciones(event:Event):void{
             
               focussedFormControl = event.target as DisplayObject;
               formIsValidAfiliaciones = true;
               validateAfil(arpValidator);
               validateAfil(epsValidator);
               validateAfil(afpValidator);
               permitirGuardar();   
            }
            
            
            private function radios():void{
            	
            	var key1:Boolean;
            	var key2:Boolean;
            	var key3:Boolean;
            	var key4:Boolean;
            	
            	if(addSiPresentCed.selected || addNoPresentoCed.selected){
            		
            		key1=true;
            		
            	}else{
            	       key2=false;
            	      }
            	
            	
            	if(addSiPresentEntrevista.selected || addNoPresentoEntrevista.selected){
            		
            		key2=true;
            		
            	}else{
            		   key2=false;
                    	}
            	if(addSiPresentHv.selected || addNoPresentoHv.selected){
            		
            		key3=true;
            		
            	}else{
            		  key3=false;
            	     }
            	
            	if(addSiPresentRut.selected || addNoPresentoRut.selected){
            		
            		key4=true;
            		
            	}else{
            		  key4=false;
            	     }
            	
            	
            	if(key1 && key2 && key3 && key4){
            		
            		formIsValidDocs=true;
            		
            	}else{
            		  formIsValidDocs=false;
            	     }
            	     
              permitirGuardar();	     
            	
            }
            
            
            public function permitirGuardar():void{
           	  
           	 
           	  
           	   if(formIsValid == true &&  formIsValidAfiliaciones ==true && formIsValidDocs==true){
           	   	
           	   	   AllformsAreValid = true;
           	   	
           	   }else{
           	   	     
           	   	     AllformsAreValid = false;
           	   	     
           	        }
           	
            }
            
            private function validate(validator:Validator):Boolean{
               
               var validatorSource:DisplayObject = validator.source as DisplayObject;
               var suppressEvents:Boolean = (validatorSource != focussedFormControl);
               var event:ValidationResultEvent = validator.validate(null, suppressEvents); 
               var currentControlIsValid:Boolean = (event.type == ValidationResultEvent.VALID);
               formIsValid = formIsValid && currentControlIsValid;
               return currentControlIsValid;
            } 
            
            private function validateAfil(validator:Validator):Boolean{
               
               var validatorSource:DisplayObject = validator.source as DisplayObject;
               var suppressEvents:Boolean = (validatorSource != focussedFormControl);
               var event:ValidationResultEvent = validator.validate(null, suppressEvents); 
               var currentControlIsValid:Boolean = (event.type == ValidationResultEvent.VALID);
               formIsValidAfiliaciones = formIsValidAfiliaciones && currentControlIsValid;
               return currentControlIsValid;
            } 
            
            
            
