<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml" 
	close="returnName()" showCloseButton="false" 
	layout="absolute" 
	width="450" height="275" 
	x="{(Application.application.width/2)-(this.width/2)}"
	y = "{(Application.application.height/2)-(this.height/2)}"
	borderSkin="CSS.SKIN.PopUpSkin" 
	>
	<mx:Script>
        <![CDATA[
        	import com.adobe.cairngorm.control.CairngormEventDispatcher;
        	import EVENT.SolicitudesServiciosEvent;
        	import MODEL.ContratoMl;
        	import VO.FichaVO;
        	import MODEL.SolicitudesServiciosMl;
        	import mx.events.ValidationResultEvent;
        	import mx.validators.Validator;
        	import MODEL.UtilidadesMl;
        	import mx.core.Application;
        	import mx.events.CloseEvent;       
            import mx.managers.PopUpManager;
            import mx.controls.Text;
           
           [Bindable]
            public var formIsValid:Boolean=true;
            
            private var focussedFormControl:DisplayObject;
            
            private function returnName():void {
                 PopUpManager.removePopUp(this);
            }
            
            public function ModificarMemorandos():void{
            	
               if(formIsValid){	
            	
            	var bncomportamiento:int;
            	var llamadoatencion:int;
            	
            	if(modbuen.selected)
            	{
            		bncomportamiento = 1;
            		llamadoatencion = 0;
            	}else{
            		
            		  bncomportamiento = 0;
            		  llamadoatencion = 1;
            		
            	     }
            	
            	var ficha:FichaVO = new FichaVO(SolicitudesServiciosMl.getInstance().SolicitudesServiciosPpl.dgmemorando.id,ContratoMl.getInstance().ContratoPpl.dgcontrato.selectedItem.id,
            	5,modconceptmemorando.text,"",0,new Date(""),"",new Date(""),new Date(""),0,llamadoatencion,bncomportamiento);
            	
            	var e:SolicitudesServiciosEvent = new SolicitudesServiciosEvent(SolicitudesServiciosEvent.MODIFICAR_FICHA_PERMISO,ficha);
            	CairngormEventDispatcher.getInstance().dispatchEvent(e);
            	returnName();
               }
            	
            	
            }
            
            private function validateForm(event:Event):void{
            
               focussedFormControl = event.target as DisplayObject;
               formIsValid = true;
               validate(conceptValidator);
               
            }
            
            private function validate(validator:Validator):Boolean{
            
               var validatorSource:DisplayObject = validator.source as DisplayObject;
               var suppressEvents:Boolean = (validatorSource != focussedFormControl);
               var event:ValidationResultEvent = validator.validate(null, suppressEvents); 
               var currentControlIsValid:Boolean = (event.type == ValidationResultEvent.VALID);
               formIsValid = formIsValid && currentControlIsValid;
               return currentControlIsValid;
            } 
            
            
            private function creationCompleteHandler():void
            {
               resetFocus();
            }   
            
            private function clearFormHandler():void
            {
               resetFocus();
            }
            private function resetFocus():void
            {
                focusManager.setFocus(modconceptmemorando);
            }
        ]]>
    </mx:Script>
      
      <mx:StringValidator 
    	requiredFieldError="!!Este campo es Obligatorio. Ingrese el Concepto de Notificaciòn por favor¡¡"
    	tooShortError="!!Este campo necesita al menos 2 caracteres mínimo¡¡"
    	tooLongError="!!Demasiados caracteres¡¡"
        id="conceptValidator"
        source="{modconceptmemorando}" 
        property="text"
        minLength="2"
        maxLength="500"
    />
      
      <mx:VBox  width="100%" height="100%" id="vbox1" horizontalAlign="center" verticalAlign="middle" >      
        
         <mx:Box width="100%" height="35"  borderSkin="CSS.SKIN.BoxSkinUp" id="box1" verticalAlign="middle" horizontalAlign="center">
		 		<mx:Canvas width="100%" height="100%" id="canvas1"  fontSize="13">
		 			<mx:Label  id="lblAddCmenor" text="MODIFICAR FICHA DE OBSERVACIONES - MEMOS" color="#FFFFFF" fontWeight="bold" fontSize="13"
		 	     	x="{(canvas1.width/2)-(lblAddCmenor.width/2)}" y="12"/>	
		 		</mx:Canvas>
		   </mx:Box>
      
       <mx:Box id="box2" height="59%" width="100%" borderSkin="CSS.SKIN.BoxSkinMedio" verticalAlign="middle" horizontalAlign="center">
      
		   <mx:Spacer height="10"/>
        
			   <mx:Form width="96%" height="50%">
			    	
				  <mx:Spacer height="5"/>
			  	
			  	<mx:FormItem label="CONCEPTO DE NOTIFICACIÓN"  fontWeight="bold" color="#FFFFFF" width="100%" fontSize="11"> 	
			    	 <mx:TextArea text="{SolicitudesServiciosMl.getInstance().SolicitudesServiciosPpl.dgmemorando.selectedItem.concepto}" id="modconceptmemorando" change="{validateForm(event)}" width="80%" color="#000000" fontSize="10" height="80" maxChars="70"/>  	  	
			    </mx:FormItem>
			  	
			  	<mx:Spacer height="10"/>
			  	
			  	<mx:FormItem label="RAZÓN MEMORANDO" fontWeight="bold" color="#FFFFFF" width="100%" fontSize="11"> 	
			        <mx:RadioButtonGroup id="modrazonmemorando"  />
			        <mx:RadioButton selected="{SolicitudesServiciosMl.getInstance().SolicitudesServiciosPpl.dgmemorando.selectedItem.buenComportamiento==1?(true):(false)}" label="Buen Comportamiento" groupName="modrazonmemorando" id="modbuen" color="#FFFFFF" fontSize="10"/> 	
			     	<mx:RadioButton selected="{SolicitudesServiciosMl.getInstance().SolicitudesServiciosPpl.dgmemorando.selectedItem.llamadoAtencion==1?(true):(false)}" label="Llamado de atención" groupName="modrazonmemorando" id="modllamadoatencion" color="#FFFFFF" fontSize="10"/> 	
			    </mx:FormItem>
			    
			    <mx:Spacer height="10"/>
			    
		    </mx:Form>
        
        </mx:Box>
        
          <mx:Box width="100%" height="40"  borderSkin="CSS.SKIN.BoxSkinAbajo" id="box3" verticalAlign="middle" horizontalAlign="center">
		    
		    <mx:HBox width="100%" height="100%" verticalAlign="middle" horizontalAlign="center">
		      
		      <mx:HBox height="100%" width="50%" verticalAlign="middle">
		      	<mx:Box horizontalAlign="right" verticalAlign="middle" width="50%">
		      		<mx:Image source="{UtilidadesMl.getInstance().rutaback2}"/>
		      	</mx:Box>
		      	
		      	<mx:Box horizontalAlign="right" verticalAlign="middle" width="50%" disabledColor="#000000">
		      		<mx:Image id="ok" click="{ModificarMemorandos()}" source="{formIsValid == true?UtilidadesMl.getInstance().rutaCheck:UtilidadesMl.getInstance().rutaCheck2}"  toolTip="Aceptar"   />	
		      	</mx:Box>
		      	
		      </mx:HBox>
		      <mx:HBox height="100%" width="50%" verticalAlign="middle">
		      		<mx:Box width="50%" verticalAlign="middle" horizontalAlign="left" >
		      			<mx:Image id="cancel" source="@Embed(source='REC/IMAGENES/delete.png')" click="{returnName()}" toolTip="Cancelar" 
		      				/>	
		      		</mx:Box>
		      		<mx:Box width="50%" verticalAlign="middle" horizontalAlign="left">
		      			<mx:Image source="{UtilidadesMl.getInstance().next2}" />	
		      		</mx:Box>
		      		
		    	</mx:HBox>
		    </mx:HBox>
				 	
	      </mx:Box>
        
     </mx:VBox>   		    
		        
</mx:TitleWindow>









